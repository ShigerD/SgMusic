<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Widget.Progress.Loading" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_white</item>
        <item name="android:minWidth">100dip</item>
        <item name="android:maxWidth">100dip</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:maxHeight">100dip</item>
    </style>

    <style name="VideoSeekBar">
        <item name="android:thumb">@drawable/h_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/h_seekbar</item>
        <item name="android:thumbOffset">0dip</item>
    </style>
</resources>
